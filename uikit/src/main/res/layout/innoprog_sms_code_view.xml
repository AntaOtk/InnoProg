<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/et_1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:maxLines="1"
        android:maxLength="1"
        android:hint="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/et_2"/>

    <EditText
        android:id="@+id/et_2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:maxLines="1"
        android:maxLength="1"
        android:hint="2"
        app:layout_constraintStart_toEndOf="@id/et_1"
        app:layout_constraintEnd_toStartOf="@id/et_3"
        app:layout_constraintBaseline_toBaselineOf="@id/et_1" />

    <EditText
        android:id="@+id/et_3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:maxLines="1"
        android:maxLength="1"
        android:hint="2"
        app:layout_constraintStart_toEndOf="@id/et_2"
        app:layout_constraintEnd_toStartOf="@id/et_4"
        app:layout_constraintBaseline_toBaselineOf="@id/et_1"/>

    <EditText
        android:id="@+id/et_4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:maxLines="1"
        android:maxLength="1"
        android:hint="2"
        app:layout_constraintStart_toEndOf="@id/et_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/et_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_1"
        app:layout_constraintStart_toStartOf="@id/et_1"
        app:layout_constraintEnd_toEndOf="@id/et_4"/>
</androidx.constraintlayout.widget.ConstraintLayout>