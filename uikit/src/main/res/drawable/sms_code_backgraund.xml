<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item  app:statusChecked="inactive">
        <shape>
            <corners android:radius="@dimen/corner_radius_sms_cod_box" />
            <solid android:color="@color/text_secondary" />
        </shape>
    </item>
    <item app:statusChecked="filled">
        <shape>
            <solid android:color="@color/text_field_fill" />
        </shape>
    </item>
    <item app:statusChecked="disabled">
        <shape>
            <solid android:color="@color/text_white_secondary" />
        </shape>
    </item>
    <item app:statusChecked="error">
        <shape>
            <stroke android:color="@color/dark"/>
            <solid android:color="@color/text_white_secondary" />
        </shape>
    </item>
    <item app:statusChecked="focused">
        <shape>
            <solid android:color="@color/text_white_secondary" />
        </shape>
    </item>
</selector>
