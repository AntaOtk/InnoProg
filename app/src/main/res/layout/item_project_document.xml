<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/training_shape"
    android:backgroundTint="@color/background_secondary">

    <ImageView
        android:id="@+id/ivDocIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:src="@drawable/ic_document"
        app:layout_constraintBottom_toBottomOf="@+id/tvDocumentTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvDocumentTitle" />

    <TextView
        android:id="@+id/tvDocumentTitle"
        style="@style/TextBody_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_12"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_12"
        android:textColor="@color/text_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivArrowForward"
        app:layout_constraintStart_toEndOf="@+id/ivDocIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Отчёт по инвестициям за I квартал 2024.docx" />

    <ImageView
        android:id="@+id/ivArrowForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="@+id/tvDocumentTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvDocumentTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>