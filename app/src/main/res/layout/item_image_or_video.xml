<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/uploadedPhotoOrVideoIV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/margin_8"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/uploadPhotoOrVideo"
        tools:src="@drawable/video_sample" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8"
        android:contentDescription="@string/delete"
        android:src="@drawable/ic_delete_2"
        app:layout_constraintEnd_toEndOf="@+id/uploadedPhotoOrVideoIV"
        app:layout_constraintTop_toTopOf="@+id/uploadedPhotoOrVideoIV" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_video"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/uploadedPhotoOrVideoIV"
        app:layout_constraintEnd_toEndOf="@id/uploadedPhotoOrVideoIV"
        app:layout_constraintStart_toStartOf="@id/uploadedPhotoOrVideoIV"
        app:layout_constraintTop_toTopOf="@id/uploadedPhotoOrVideoIV"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>