<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary"
    tools:context=".feature.feed.presentation.FeedFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/margin_8" />

    <com.innoprog.android.uikit.InnoProgButtonView
        android:id="@+id/btnCreateIdea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:buttonLeftIcon="@drawable/ic_idea_add"
        app:buttonSize="medium"
        app:buttonState="enabled"
        app:buttonText="Идея"
        app:buttonType="flat"
        app:layout_constraintBottom_toTopOf="@id/tvFeed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFeed"
        style="@style/TextHeadline_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:text="@string/feed_title"
        android:textColor="@color/text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateIdea" />

    <EditText
        android:id="@+id/etSearch"
        style="@style/TextBody_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@drawable/background_search_edit_text"
        android:drawableStart="@drawable/ic_search"
        android:drawableEnd="@drawable/delete"
        android:drawablePadding="2dp"
        android:hint="Название публикации"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLines="1"
        android:paddingVertical="@dimen/padding_6"
        android:paddingStart="4dp"
        android:paddingEnd="@dimen/padding_6"
        android:singleLine="true"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary"
        android:textCursorDrawable="@drawable/custom_cursor"
        app:layout_constraintEnd_toStartOf="@+id/tvCancel"
        app:layout_constraintStart_toStartOf="@+id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@+id/tvFeed"
        app:layout_goneMarginEnd="@dimen/margin_8" />

    <TextView
        android:id="@+id/tvCancel"
        style="@style/TextBody_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:text="Отменить"
        android:textColor="@color/accent_secondary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/etSearch"
        app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
        app:layout_constraintStart_toEndOf="@+id/etSearch"
        app:layout_constraintTop_toTopOf="@+id/etSearch" />

    <com.innoprog.android.uikit.InnoProgChipGroupView
        android:id="@+id/cgvFilter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:theme="@style/CustomChips"
        app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
        app:layout_constraintStart_toStartOf="@+id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@+id/etSearch" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPublications"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cgvFilter"
        tools:itemCount="4"
        tools:listitem="@layout/item_publication" />


</androidx.constraintlayout.widget.ConstraintLayout>